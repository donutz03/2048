<Window x:Class="game2048cs.ScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Your Scores" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ScoresGrid" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                <DataGridTextColumn Header="Player Name" Binding="{Binding PlayerName}" Width="*"/>
                <DataGridTextColumn Header="Total Score" Binding="{Binding TotalScore}" Width="*"/>
                <DataGridTextColumn Header="Max Number" Binding="{Binding MaxNumber}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
